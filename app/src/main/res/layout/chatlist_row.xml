<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="?android:selectableItemBackground">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".20"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:background="?android:selectableItemBackground"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".80"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/textViewNameChat"
                android:layout_width="0dp"
                android:layout_weight="0.80"
                android:maxLines="1"
                android:gravity="center_vertical|start"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="Saurav"
                />

            <TextView
                android:id="@+id/textViewMsgTime"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:text="10:23 AM"
                android:layout_height="wrap_content"
                android:gravity="center|end"
                android:textColor="@color/grey"
                android:textSize="12dip"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical">

            <saurav.chandra.baatmessenger.EmojiconTextView
                android:layout_width="0dp"
                android:layout_weight=".85"
                android:layout_height="fill_parent"
                android:text="ggggggghhhhhhjjjjjkkk"
                android:textColor="@color/grey"
                android:textSize="15dp"
                android:id="@+id/textViewMsg"
                />
            <TextView
                android:id="@+id/textViewUnreadMsg"
                android:layout_gravity="center_vertical"
                android:gravity="center|end"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/unread_msg_background"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
