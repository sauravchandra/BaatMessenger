<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:background="@drawable/permission_box"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/permission_image"
                android:background="@drawable/permission"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/permission_box_white"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/permission_text"
                android:gravity="center_vertical"
                android:padding="25dp"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/permission_delay"
                    android:layout_marginRight="20dp"
                    android:text="NOT NOW"
                    android:padding="5dp"
                    android:background="?android:selectableItemBackground"
                    android:textSize="15sp"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/permission_accept"
                    android:text="CONTINUE"
                    android:padding="5dp"
                    android:background="?android:selectableItemBackground"                    android:textSize="15sp"
                    android:textColor="@color/primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>