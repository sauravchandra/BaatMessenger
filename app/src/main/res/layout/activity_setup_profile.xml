<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/code_send"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="25dp"
            android:text="Set up your profile"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/display_pic_select"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/photo_select"
            android:textColor="@color/primary"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/user_name_profile"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/primary"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:lines="1"
            android:hint="Type your name"
            android:textAlignment="center"
            android:layout_gravity="center" />

        <view
            android:id="@+id/setup_profile_button"
            class="mbanje.kurt.fabbutton.FabButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:color="@color/primary"
            android:focusable="true"
            android:indeterminate="true"
            android:max="100"
            android:src="@drawable/forward"
            app:fbb_endBitmap="@drawable/process_complete"
            app:fbb_progressColor="@color/primary_light"
            app:fbb_progressWidthRatio="0.1"
            app:fbb_showEndBitmap="false"
            app:fbb_showShadow="true" />

        </LinearLayout>
</LinearLayout>
